% title page: in FOM ifes Design
%
\setbeamertemplate{title page}
{
  \begin{tikzpicture}[remember picture, overlay]
    \node[inner sep=0pt] at (current page.center){%
              \includegraphics[width=\myPaperWidth,height=\myPaperHeight]{\backgroundimage}%
      };%
      \node[shift={(\logoxshift,\logoyshift)},inner sep=0pt] at (current page.north east){%
              \includegraphics[width=\logowidth,height=\logoheight]{\logoimage}%
      };%
    % Überschrift
    \node[anchor=west, inner sep=5pt] at (current page.west){%
    	\begin{tabular}{b{\titleboxwidth}}
    	{%
    		\usebeamercolor[fg]{title in titlepage}%
    		\usebeamerfont{title in titlepage}%
    		\inserttitle %
    	}\\
    	\end{tabular}
    };%
    % ifes informationen hardcoded!
    \node[anchor=west, yshift=-1.5cm,inner sep=5pt] at (current page.west){%
    	\begin{tabular}{b{\titleboxwidth}}
    	{%
    		\usebeamercolor[fg]{institute in titlepage}%
             \usebeamerfont{institute in titlepage}
    		ifes Institut für Empirie \& Statistik%
    	}\\
     	{%
    		\usebeamercolor[fg]{firm in titlepage}%
             \usebeamerfont{firm in titlepage}
    		FOM Hochschule für Oekonomie \& Management%
    	}\\
    	\end{tabular}
    };%
    % Linie
    \node[anchor=west, inner sep=12pt, yshift=-2.5cm] at (current page.west){
     \includegraphics[%
            width=0.9\paperwidth%
            ]{%
                \lineimage%
            }%
    };
    \node[anchor=east, xshift=0cm, yshift=-1cm, inner sep=40pt] at (current page.south east){%
    \begin{minipage}[b][0.6\paperheight][t]{\linewidth}
          \begin{FlushRight}
            {%
             \usebeamercolor[fg]{author in titlepage}%
             \usebeamerfont{author in titlepage}%
             \insertauthor \par%
             }

            \vspace*{1.5em}
            \par

             {%
     		      \usebeamercolor[fg]{subtitle in titlepage}%
    	      	\usebeamerfont{subtitle in titlepage}%
    	      	\insertsubtitle %
             }
          \end{FlushRight}
        \end{minipage}
    };%
  \end{tikzpicture}%
}

